---
import { remark } from "remark";
import html from "remark-html";
const allPrograms = import.meta.glob("/src/content/programs/*.md");
const programs = await Promise.all(
  Object.values(allPrograms).map(async (programData) => {
    const { frontmatter, default: content } = await programData();
    const processedContent = await remark().use(html).process(content);
    return { ...frontmatter, content: processedContent.toString() };
  })
);
---

<!-- Services: Travel insurance -->
<div class="col d-flex justify-content-center">
  <img
    class="d-dark-mode-none"
    src="/assets/img/programs/program.png"
    width="544"
    alt="Image"
    style="margin-bottom: 3%;"
  />
</div>
<section class="overflow-hidden pb-5">
  <div class="container pb-sm-3 mb-md-2 mb-lg-3">
    <div class="row g-4">
      <div
        class="col-md-7 order-md-2"
        data-aos="fade-left"
        data-aos-duration="600"
        data-aos-offset="280"
        data-disable-parallax-down="md"
      >
        <img
          class="object-fit-cover w-100 h-100 rounded-3"
          src="/assets/img/programs/program1.png"
          alt="Image"
        />
      </div>
      <div
        class="col-md-5 order-md-1"
        data-aos="fade-right"
        data-aos-duration="600"
        data-aos-offset="280"
        data-disable-parallax-down="md"
      >
        <div
          class="d-flex flex-column h-100 bg-secondary rounded-3 py-5 px-4 px-lg-5"
        >
          <h2 class="mb-xl-4">{programs[0].program1.title}</h2>
          <p class="mb-4 mb-xl-5" style="line-height: 2.5;">
            {programs[0].program1.description}
          </p>
          <div class="mt-">
            <a
              class="btn btn-primary btn-sm fs-sm order-lg-3 d-none d-sm-inline-flex"
              href="#">See more</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

