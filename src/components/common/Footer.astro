---
import { getEntry } from "astro:content";
const footerDetails =(await getEntry("footer" , "footerdetails")).data

---


<!-- Footer -->
<footer class="footer">
  <div class="bg-secondary py-5">
    <div class="container pt-sm-2 pt-md-3 pt-lg-4">
      <div class="row gy-md-5 gy-4 mb-md-5 mb-4 pb-lg-2">
        <div class="col-lg-3">
          <a class="navbar-brand d-inline-flex align-items-center mt-0 mb-lg-4 mb-3" href="index.html">
            <span class="text-primary flex-shrink-0 me-2">
              <img class="text-primary flex-shrink-0 me-2" src="/Logo.png" width="107" height="66.61">
            </span>
          </a>
          <p class=" fs-sm pb-2 pb-md-3 mb-3" style="max-width: 306px;">{footerDetails.description}</p>
          <div class="mt-n3 ms-n3">
              <a class="btn btn-secondary btn-icon btn-sm btn-x rounded-circle mt-3 ms-3" href="https://www.instagram.com/kiran_trust/" aria-label="Instagram">
                  <i class="ai-instagram"></i>
              </a>
              <a class="btn btn-secondary btn-icon btn-sm btn-x rounded-circle mt-3 ms-3" href="https://www.facebook.com/foundation.kiran" aria-label="Facebook">
                  <i class="ai-facebook"></i>
              </a>
              <a class="btn btn-secondary btn-icon btn-sm btn-x rounded-circle mt-3 ms-3" href="https://www.linkedin.com/company/kirantrust/" aria-label="LinkedIn">
                  <i class="ai-linkedin"></i>
              </a>
          </div>
        </div>
        <div class="col-xl-8 offset-xl-1 col-lg-9">
          <div class="row">
            <div class="col">
              <h4 class="h6 fw-bold pb-lg-1">{footerDetails.aboutTitle.about}</h4>
              <ul class="nav flex-column mb-0">
                <li class="nav-item mb-2">
                  <a class="nav-link p-0" href="#">{footerDetails.aboutTitle.story}</a>
                </li>
                <li class="nav-item mb-2">
                  <a class="nav-link p-0" href="/privacyPolicies">{footerDetails.aboutTitle.policy}</a>
                </li>
                <li class="nav-item mb-2">
                  <a class="nav-link p-0" href="#">{footerDetails.aboutTitle.report}</a>
                </li>
                <li class="nav-item mb-2">
                  <a class="nav-link p-0" href="#">{footerDetails.aboutTitle.statement}</a>
                </li>
              </ul>
            </div>
            <div class="col">
              <h4 class="h6 fw-bold pb-lg-1">{footerDetails.contactTitle.contact}</h4>
              <ul class="nav flex-column mb-0"> 
                  <li><a class="nav-link fw-normal py-1 px-0" href="mailto:info@kiran.foundation"><i class="fa fa-envelope" style="font-size:24px"></i>&nbsp; {footerDetails.contactTitle.info} </a></li>
                  <li><a class="nav-link fw-normal py-1 px-0" href="tel:919303997100"><i class="fa fa-phone" style="font-size:24px"></i>&nbsp; {footerDetails.contactTitle.phone} </a></li>
                  <li><a class="nav-link fw-normal py-1 px-0" href="https://wa.me/919880141412"><i class="fa fa-whatsapp" style="font-size:24px"></i>&nbsp; {footerDetails.contactTitle.whatsApp}</a></li>
              </ul>
            </div>           
            <div class="col">
              <h4 class="h6 fw-bold pb-lg-1"> {footerDetails.listTitle.heading}</h4>
              <ul class="nav flex-column mb-0" style="width:290px;">                 
                  <li><a class="nav-link fw-normal py-1 px-0"  href="/shakti"><i class="fa fa-whatsapp" style="font-size:24px"></i>&nbsp; {footerDetails.listTitle.shaktiGroup} </a></li>
                  <li><a class="nav-link fw-normal py-1 px-0"  href="/src/components/About/speaker.astro"><i class="fa fa-whatsapp" style="font-size:24px"></i>&nbsp; {footerDetails.listTitle.speakingClubGroup}</a></li>
                  <li><a class="nav-link fw-normal py-1 px-0" href="#"><i class="fa fa-whatsapp" style="font-size:24px"></i>&nbsp; {footerDetails.listTitle.gyanGroup}</a></li>
                  <li><a class="nav-link fw-normal py-1 px-0" href="https://chat.whatsapp.com/"><i class="fa fa-whatsapp" style="font-size:24px"></i>&nbsp; {footerDetails.listTitle.volunteerGroup} </a></li>
              </ul>
            </div>           
          </div>
        </div>
      </div>
      <div class="fs-sm text-body-secondary">&copy; Kiran Foundation <a href="#" target="_blank" rel="noopener" class="text-dark text-decoration-none opacity-90"></a></div>
    </div>
  </div>
</footer>