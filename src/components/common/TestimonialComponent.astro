---
export interface Props {
    image: string;
    name: string;
    location: string;
    text: string;
}

const { image, name, location, text } = Astro.props;
---

<div class="testimonial-container">
    <img src={image} alt={name} class="testimonial-image" >
    <p class="testimonial-text">{text}</p>
    <div class="testimonial-info">
        <div class="testimonial-name">{name}</div>
        <div class="testimonial-location">{location}</div>
    </div>
</div>

<style>
    .testimonial-container {
    max-width: 500px; 
    width: 100%;
    margin: auto;
    background: #E5F1FF;
    border-radius: 36px;
    padding: 20px;
    box-sizing: border-box;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 36px;
    }

    .testimonial-text {
        font-family: Poppins, sans-serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        text-align: center;
        color: #2B2E36;
        margin: 30px 0;
    height: calc(100% - 60px); 
    overflow: auto; 
    padding: 5px;
}
    .testimonial-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
    }

    .testimonial-name {
        font-family: Poppins, sans-serif;
        font-size: 18px;
        font-weight: 700;
        line-height: 27px;
        text-align: center;
        color: #2B2E36;
    }

    .testimonial-location {
        font-family: Inter, sans-serif;
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        text-align: center;
        color: #576071;
    }

    .testimonial-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        position: absolute;
        top: -50px;
        left: calc(50% - 50px);
        object-fit: cover;
    }

</style>