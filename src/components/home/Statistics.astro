---
import { getEntry } from 'astro:content'
const statistics = (await getEntry('home', 'statistics')).data
const common = (await getEntry('common', 'common')).data
---

<section
  class='bg-secondary position-relative py-4 py-md-5'
  style=' background-color: #051D40 !important; '
>
  <div class='container position-relative'>
    <div
      class='d-flex justify-content-evenly align-items-center d-sm-flex-col flex-wrap'
    >
      <div class='' style=''>
        <div class='statistics-container py-1 my-lg-2 my-xl-3'>
          <div class='statistics-container-data text-light display-4 mb-1'>
            {statistics.stat1.data}
          </div>
          <p class='statistics-title-p fs-xl mb-0 text-light'>
            {statistics.stat1.title}
          </p>
        </div>
      </div>
      <div class=''>
        <div class='statistics-container py-1 ps-xl-4 my-lg-2 my-xl-3'>
          <div class='statistics-container-data text-light display-4 mb-1'>
            {statistics.stat2.data}
          </div>
          <p
            class='statistics-title-p fs-xl mb-0 text-light'
            style='width: 225px;'
          >
            {statistics.stat2.title}
          </p>
        </div>
      </div>
      <div class='d-flex justify-content-md-end'>
        <div class='py-1 my-lg-2 my-xl-3'>
          <div class='text-light display-4 mb-1 text-center'>
            {statistics.stat3.data}
          </div>
          <p class='statistics-title-p fs-xl mb-0 text-light'>
            {statistics.stat3.title}
          </p>
        </div>
      </div>
      <div class='d-flex justify-content-md-end'>
        <div class='py-1 pe-xl-4 my-lg-2 my-xl-3'>
          <div class='text-light display-4 mb-1 text-center'>
            {statistics.stat4.data}
          </div>
          <p class='statistics-title-p fs-xl mb-0 text-light'>
            {statistics.stat4.title}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
